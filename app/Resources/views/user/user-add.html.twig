<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Netflix</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
</head>
<body>
{# app/Ressources/admin/login.html.twig #}
<header>
    <nav>
        <form action="{{ path('login') }}" method="post">
            <ul>
                <li class="left"><img src="{{ asset('img/logo.png') }}"></li>
                <li class="right"><button class="btn" type="submit">Connexion</button></li>
                <li class="right"><input type="password" id="password" name="_password" placeholder="Mot de passe"/></li>
                <li class="right"><input type="text" id="username" name="_username" placeholder="Email" /></li>
            </ul>
        </form>
    </nav>
</header>
<div class="container">
    <fieldset>
        <legend>Nouveau Compte</legend>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div>
            {{ form_label(form.firstname) }}
            {{ form_errors(form.firstname) }}
            {{ form_widget(form.firstname) }}
        </div>
        <div>
            {{ form_label(form.lastname) }}
            {{ form_errors(form.lastname) }}
            {{ form_widget(form.lastname) }}
        </div>
        <div>
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div>
            {{ form_label(form.password) }}
            {{ form_errors(form.password) }}
            {{ form_widget(form.password) }}
        </div>
        {{ form_end(form) }}
    </fieldset>
</div>
</body>
</html>
